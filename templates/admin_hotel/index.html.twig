{% extends 'base-backend.html.twig'%}

{% block title %}Hotel index{% endblock %}

{% block body %}

    <div class="d-flex justify-content-between align-items-center">
    <h1>Hotel index</h1>
    <a href="{{ path('app_admin_hotel_new') }}" class="btn btn-success">Nouveau</a>
    </div>
    
    <table class="table table-index table-striped table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                {# <th>Description</th> #}
                <th>Image</th>
                <th>Mis à jour</th>
                 <th>Active</th>
                 <th>Slug</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for hotel in hotels %}
            <tr>
                <td>{{ hotel.id }}</td>
                <td>{{ hotel.nom }}</td>
                {# <td>{{ hotel.description }}</td> #}
                <td>{{ hotel.imageName }}</td>
                <td>{{ hotel.updatedAt ? hotel.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ hotel.isActive ? 'Yes' : 'No' }}</td>
                <td>{{ hotel.slug }}</td>
                <td>
                    {% include 'admin_hotel/_delete_form.html.twig' %}
                    <a href="{{ path('app_admin_hotel_show', {'id': hotel.id}) }}" class="btn btn-dark"><i class="align-middle" data-feather="eye"></i></a>
                    <a href="{{ path('app_admin_hotel_edit', {'id': hotel.id}) }}"class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a>
            </tr>
        {% else %}
            <tr>
                <td colspan="7"><div class="text-start">Aucune entrée dans la BDD</div></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

 
{% endblock %}
